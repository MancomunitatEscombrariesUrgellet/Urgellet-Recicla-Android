<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@color/accentLight"
    android:paddingLeft="20dp"
    android:paddingStart="20dp"
    >

    <com.github.pavlospt.CircleView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:cv_titleText=""
        app:cv_subtitleText=""
        app:cv_strokeColorValue="@color/white"
        app:cv_backgroundColorValue="@color/black"
        app:cv_fillColor="@color/green"
        app:cv_fillRadius="1"
        app:cv_strokeWidthSize="0"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/boleta"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"

        />

    <TextView
        android:paddingEnd="25dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/salari"
        android:text="34,56 â‚¬"
        android:paddingBottom="0dp"
        android:layout_centerVertical="true"
        android:textColor="@color/blackDark"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:textSize="12sp"
        android:paddingBottom="0dp"
        android:paddingStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/semana"
        android:text="1a semana"
        android:layout_toRightOf="@+id/boleta"
        android:layout_centerVertical="true"
        android:textColor="@color/blackDark"
         />

</RelativeLayout>